<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="backgroundColor">#FFFFFF</item>
    </style>
    <style name="dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="backgroundColor">#FFFFFF</item>
    </style>
    <!--Ahmed-->
    <!--Ahmed-->
    <!--Manar-->
    <style name="importantText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:lines">2</item>
        <item name="android:innerRadius">5dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="smallText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:lines">2</item>
        <item name="android:innerRadius">5dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="informText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:lines">1</item>
        <item name="android:innerRadius">5dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Manar-->
</resources>
